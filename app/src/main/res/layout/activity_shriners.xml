<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.androidbootcamp.healthcareapp.Shriners">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout4">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_shriners" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Shriners Childrens Hospital"
        android:textAlignment="center"
        android:textSize="24sp"
        android:id="@+id/textView2"
        android:layout_below="@+id/appBarLayout4"
        android:layout_toEndOf="@+id/home9" />

    <Button
        android:id="@+id/fav9"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add To Favorites"
        android:textSize="24sp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="     In 2017, Shriners Hospitals for Children — Los Angeles will be transitioning to the new Shriners Hospitals for Children Medical Center, where we will be operating as an ambulatory surgery center. Once our new medical center opens, our mission will still be dedicated to meeting the needs of as many patients and families as possible who can benefit from the specialized services we provide. While our facility operates on an outpatient basis to serve more patients, we still offer surgeries and procedures requiring an overnight admission at our partner hospital – Huntington Hospital in Pasadena, California. Our physicians perform the medical procedures and provide all pre-surgical and follow-up care. Our family-centered approach to care is designed to support the whole family during all phases of a child’s care. ​"
        android:textSize="14sp"
        android:layout_above="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fav9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Directions"
        android:textSize="24sp"
        android:id="@+id/map9"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/phone9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(213) 388-3151"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/map9"
        android:layout_alignBottom="@+id/map9"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/web5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onClick"
        android:text="https://www.shrinershospitalsforchildren.org/Locations/losangeles"
        android:textAlignment="center"
        android:textColor="#0000FF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="14dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/home9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:layout_below="@+id/appBarLayout4"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/contact9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTACTS"
        android:layout_above="@+id/web5"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
